package br.com.unip.garage.view;

import org.cocos2d.layers.CCLayer;
import org.cocos2d.layers.CCScene;
import org.cocos2d.nodes.CCDirector;
import org.cocos2d.types.CGPoint;

import br.com.unip.garage.config.Elementos;

public class TitleScreen extends CCLayer {

	private ScreenBackground background;
	
	public CCScene scene() {
		CCScene scene = CCScene.node();
		scene.addChild(this);
		return scene;
	}
	
	public TitleScreen() {
		this.background = new ScreenBackground(Elementos.BACKGROUND_MAIN);
		 this.background.setPosition(CGPoint.ccp(
				 CCDirector.sharedDirector().winSize().width / 2.0f, 
				 CCDirector.sharedDirector().winSize().height / 2.0f));

		this.addChild(this.background);
	}

}
